{% extends "base_home_cards.html.twig" %}
{% block content %}
    <div class="container">
        <div class="container">
            <h4 class="blue-text text-darken-4"><i class="mdi mdi-store left"></i>{{ 'store.management.home'|trans }}</h4>
            <div class="divider grey title-divider"><p>1</p></div>
        </div>
        <div class="container">
            <div class="col s6 m6 l4">
                <div class="card-panel col s12 hoverable center">
                    <a href="{{ path('urbem_store_management_product_list') }}">
                        <h6><i class="mdi mdi-archive large" aria-hidden="true"></i></h6>
                        <h6 class="truncate center">{{ 'store.management.product'|trans }}</h6>
                    </a>
                    <p></p><div class="divider col s12"></div>
                    <h5 class="right">
                        <a href="{{ path('urbem_store_management_product_list') }}"
                           class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Procurar">
                            <i class="material-icons">search</i>
                        </a>
                    </h5>
                    <h5 class="left">
                        <a href="{{ path('urbem_store_management_product_create') }}"
                            class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Incluir">
                            <i class="material-icons">add_circle</i>
                        </a>
                    </h5>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
